<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".videoplayerdemo.activity.VideoPlayerActivity">

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <com.example.admin.mytestgit.videoplayerdemo.view.player.VideoPlayerIJK
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000" />
    </android.support.v7.widget.ContentFrameLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_switch_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换网络直播源" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_switch_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="切换本地直播源" />

</android.support.v7.widget.LinearLayoutCompat>